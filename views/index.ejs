<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="bg-dark text-white p-3 d-flex justify-content-between align-items-center">
        <h2 class="m-0">Book Store</h2>
        <button class="btn btn-primary">View Books</button>
    </header>
    
    <!-- Slider Section -->
    <div id="bookCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="book1.jpg" class="d-block w-100" alt="Book 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Book Title 1</h5>
                    <p>Author 1</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="book2.jpg" class="d-block w-100" alt="Book 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Book Title 2</h5>
                    <p>Author 2</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
    
    <!-- Best Seller Section -->
    <section class="container my-5">
        <h3>Best Seller Books</h3>
        <div class="card">
            <img src="bestseller.jpg" class="card-img-top" alt="Best Seller Book">
            <div class="card-body">
                <h5 class="card-title">Best Seller Title</h5>
                <p class="card-text">by Best Seller Author</p>
                <p class="card-text">This is the description of the best seller book.</p>
            </div>
        </div>
    </section>
    
    <!-- Popular Books Section -->
  <!-- Popular Books Section -->
<section class="container my-5">
    <h3>Newly Added Books</h3>
    <div class="row">
            <% books.forEach((book)=> { %>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.bookName %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.bookName %></h5>
                            <p class="card-text">by <%= book.author %></p>
                            <p class="card-text">Price: $<%= book.price %></p>
                            <p class="card-text"><%= book.description %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
    </div>
</section>

    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
